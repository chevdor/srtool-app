{
  "name": "srtool-app",
  "version": "0.1.0",
  "description": "srtool App",
  "main": "./build/main.js",
  "scripts": {
    "dev:electron": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
    "dev:react": "NODE_ENV=development webpack serve --config webpack.react.config.js --mode development",
    "build:electron": "NODE_ENV=production webpack --config webpack.electron.config.js --mode production",
    "build:react": "NODE_ENV=production webpack --config webpack.react.config.js --mode production",
    "build": "npm run build:electron && npm run build:react",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "npm run build && electron-builder build --mac",
    "dist:linux": "npm run build && electron-builder build --linux",
    "dist:win": "npm run build && electron-builder build --win",
    "dist:all": "npm run build && electron-builder build --mac --linux --win",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "clean": "rm -rf node_modules build/{js,main.*,index.html} dist *.log",
    "postinstall": "electron-builder install-app-deps",
    "ci:test:mac": "gitlab-runner exec docker pack:mac"
  },
  "keywords": [],
  "author": "chevdor",
  "license": "MIT",
  "build": {
    "files": [
      "build/",
      "node_modules/",
      "package.json"
    ],
    "productName": "SRTOOL-App",
    "appId": "com.chevdor.srtool-app",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "devDependencies": {
    "@babel/core": "7.12.17",
    "@babel/preset-env": "7.12.17",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "7.12.17",
    "@types/chai": "^4.2.11",
    "@types/cors": "2.8.10",
    "@types/dockerode": "^3.2.2",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "8.2.1",
    "@types/node": "14.14.31",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.4",
    "@types/unzipper": "^0.10.3",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-regenerator-runtime": "^6.5.0",
    "chai": "^4.2.0",
    "css-loader": "^5.0.2",
    "electron": "11.3.0",
    "electron-builder": "^22.9.1",
    "eslint": "7.20.0",
    "html-webpack-plugin": "5.2.0",
    "mini-css-extract-plugin": "1.3.8",
    "mocha": "8.3.0",
    "style-loader": "^2.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.5",
    "webpack": "5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "check-disk-space": "^2.1.0",
    "dockerode": "^3.2.1",
    "electron-is": "^3.0.0",
    "electron-store": "^7.0.2",
    "javascript-terminal": "^1.1.1",
    "node-fetch": "^2.6.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-jss": "^10.5.1",
    "react-terminal-component": "^1.5.0",
    "semver": "^7.3.4",
    "styled-components": "^5.2.1",
    "unzipper": "^0.10.11"
  }
}
